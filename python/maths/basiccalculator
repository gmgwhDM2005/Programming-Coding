#Basic Python Calculator
while True:
     num1=int(input('Please enter your 1st number '))
     num2=int(input('Please enter your 2nd number '))

     while True:
          option=str(input('Would you like to: +, -, /, * '))

          if option == '+':
               ans = num1 + num2
               break

          elif option == '-':
               ans = num1 - num2
               break

          elif option == '/':
               ans = num1 / num2
               break

          elif option == '*':
               ans = num1 * num2
               break
     print(str(ans))
     break
